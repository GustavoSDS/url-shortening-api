---
import Logo from "./ui/Logo.astro";
import IconBurger from "./icons/IconBurger.astro";

interface Props {}

const {} = Astro.props;
---

<script type="module">
	const burger = document.getElementById("burger");
	const navMobile = document.getElementById("nav-mobile");
	burger.addEventListener("click", () => {
		navMobile.classList.toggle("hidden");
		navMobile.classList.toggle("flex");
		burger.classList.toggle("rotate-180");
	});
</script>

<header class="relative flex items-center justify-between px-6 mt-8">
	<Logo />

	<nav class="hidden sm:flex">
		<ul class="flex flex-col w-full text-lg font-bold text-center border-b gap-7 border-neutral-grayishViolet">
			<li>
				<a class="hover:text-primary-cyan" href="/features">Features</a>
			</li>
			<li>
				<a class="hover:text-primary-cyan" href="/pricing">Pricing</a>
			</li>
			<li>
				<a class="hover:text-primary-cyan" href="/resources">Resources</a>
			</li>
		</ul>

		<a class="hover:text-primary-cyan" href="/login"> Login </a>
		<a href="/signup"> Sign Up </a>
	</nav>

	<button id="burger" class="sm:hidden">
		<IconBurger fill="fill-neutral-grayishViolet ouline-none" />
	</button>
    
    <!-- Mobile Nav -->
    <nav
        class="absolute z-50 flex-col items-center hidden w-11/12 py-10 mt-4 text-white transition-all duration-300 ease-in-out -translate-x-1/2 sm:hidden bg-primary-darkViolet rounded-xl top-8 left-1/2 right-1/2"
        id="nav-mobile">
        <ul
            class="flex flex-col w-full pb-8 text-lg font-bold text-center border-b gap-7 border-neutral-grayishViolet">
			<li>
				<a class="hover:text-primary-cyan" href="/features">Features</a>
			</li>
			<li>
				<a class="hover:text-primary-cyan" href="/pricing">Pricing</a>
			</li>
			<li>
				<a class="hover:text-primary-cyan" href="/resources">Resources</a>
			</li>
        </ul>
    
        <div class="flex flex-col items-center w-full gap-6 px-6 mt-8 text-center">
            <a class="hover:text-primary-cyan" href="/login"> Login </a>
            <a
                href="/signup"
                class="grid w-full h-12 text-lg font-bold rounded-full bg-primary-cyan hover:bg-primary-cyan/80 place-content-center">
                Sign Up
            </a>
        </div>
    </nav>
</header>

