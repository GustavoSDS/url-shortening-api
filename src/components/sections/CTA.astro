---
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";
---

<section
	class="relative bg-primary-darkViolet h-[300px] flex flex-col items-center justify-center gap-y-4">
	<Image
		src="/images/bg-boost-mobile.svg"
		alt="Illustration Working"
		class="w-full h-full absolute top-0 left-0 z-0"
		width={1000}
		height={1000}
	/>
	<h2 class="font-bold text-[27px] text-white z-10">Boost your links today</h2>
	<!-- Call to Action -->
	<Button
		text="Get Started"
		url="/signup"
		class="mx-auto rounded-full max-w-[197px] z-10"
	/>
</section>
